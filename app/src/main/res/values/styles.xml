<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DEFAULT_TIL" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">16dp</item>
        <item name="fontFamily">@font/easports</item>
    </style>

    <style name="DEFAULT_TIE" parent="ThemeOverlay.Material3.MaterialTimePicker.Display.TextInputEditText">
        <item name="fontFamily">@font/easports</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="DEFAULT_BTN" parent="ThemeOverlay.Material3.Button">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/easports</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DEFAULT_TXT_TITLE" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">8dp</item>
        <item name="fontFamily">@font/easports</item>
    </style>

    <style name="DEFAULT_TXT_RATTING" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">50sp</item>
        <item name="fontFamily">@font/easports</item>
    </style>

    <style name="DEFAULT_TXT_SKILLS" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/easports</item>
    </style>

</resources>
